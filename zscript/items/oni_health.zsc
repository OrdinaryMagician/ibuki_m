// all the healing for Ibuki mod

Class OniBasicHeal : Health
{
	Default
	{
		Inventory.Amount 1;
		Inventory.MaxAmount 100;
	}
}
Class OniSpiritHeal : Health
{
	Default
	{
		Inventory.Amount 1;
		Inventory.MaxAmount int.max;
	}
}

Class OniSmallWater : SWWMHealth
{
	Default
	{
		Tag "$T_ONISMALLWATER";
		Inventory.Icon "graphics/HUD/Icons/I_OniSmallWater.png";
		Inventory.PickupMessage "$T_ONISMALLWATER";
		Inventory.MaxAmount 15;
		Inventory.InterHubAmount 15;
		SWWMHealth.GiveHealth "OniBasicHeal";
		SWWMHealth.GiveAmount 5;
	}
	States
	{
	Spawn:
		XZW1 A -1;
		Stop;
	}
}
